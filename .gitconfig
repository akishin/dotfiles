[user]
	name  = akishin
	email = akishin999@gmail.com
[color]
    ui = true
[color "branch"]
    current = yellow black
    local = yellow
    remote = magenta
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red reverse
    new = green reverse
    whitespace = white reverse
[color "status"]
    added = yellow
    changed = green
    untracked = cyan reverse
    branch = magenta
[core]
    excludesfile = ~/.gitignore
    editor = vim -c \"set fenc=utf8\"
    pager  = less -r
    quotepath = false
    whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol
[merge]
    tool = vimdiff
    ff   = false
[push]
    # default の push 先は現在の branch のみ
    default = tracking
[pull]
    # pull --rebase
    rebase = true
[branch]
    autosetuprebase = always
[tig "bind"]
    generic = g move-first-line
    generic = G move-last-line

